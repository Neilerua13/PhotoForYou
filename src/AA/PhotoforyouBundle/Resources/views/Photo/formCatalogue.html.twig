<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{{ form_errors(form) }}

	{{ form_errors(form.nbPerPage) }}
	<div style="display: flex; text-align: center; justify-content: space-between; width: 100%; margin-bottom: 0.5em;">
		{{ form_label(form.nbPerPage, "Nombre de photos par page :") }}
		<div style="width: 5em;">{{ form_widget(form.nbPerPage) }}</div>
	</div>

	{{ form_errors(form.categories) }}
	<div style="display: flex; text-align: center; justify-content: space-between; width: 100%;">
		{{ form_label(form.categories, "Catégorie recherchée :") }}
		<div style="width: auto; margin-left: 1em;">{{ form_widget(form.categories) }}</div>
	</div>

	<div style="width: 100%; margin-top: 1em; display: flex; justify-content: space-around;">	
		{{ form_widget(form.Actualiser, {'attr': {'class': 'btn btn-primary col-md-4'}}) }}
		<input type="reset" name="reset" value="Réinitialiser" class="btn btn-danger col-md-4">
	</div>

	{{ form_rest(form) }}

	{{ form_end(form) }}
</div>