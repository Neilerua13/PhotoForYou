{% extends "@AAPhotoforyou//layout.html.twig" %}

{% block title %}Modifier - {{ parent() }}{% endblock %}

{% block stylesheets %}

{{ parent() }}

<style type="text/css">
	img
	{
		max-width: 100%;
	}
</style>
{% endblock %}

{% block body %}

	{{ parent() }}
	<h4>Modifier la photographie</h4>

	<img
	    src="{{ vich_uploader_asset(photo, 'imageFile') }}" alt="{{ photo.imageName }}"
	    style="
	      margin-top: 1em;
	      margin-bottom: 0.5em;
	      box-shadow: 0px 0px 4px black;
	      max-width: 100%;
	    "
	/>

	{{ include("@AAPhotoforyou/Photo/form.html.twig") }}
{% endblock %}
